@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" DefaultScrollbar="false"/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudGrid Spacing="0">
    <MudItem xs="12">
        <MudAppBar Color="Color.Primary" Fixed="false" Elevation="3">
            <MudText Typo="Typo.h3" Edge="Edge.Start">DPD Tool</MudText>
            <MudSpacer />
            <MudSwitch @bind-Value="_isDarkMode" Color="Color.Tertiary" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode"/>

            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
        </MudAppBar>
    </MudItem>

    <MudItem xs="2">
        <NavMenu/>
    </MudItem>
    
    <MudItem xs="10">
        <MudPaper Height="100%" Width="100%" Class="pa-6">
            @Body
        </MudPaper>
    </MudItem>

</MudGrid>

@code{
    private MudTheme _theme = new();
    private bool _isDarkMode;
    private MudThemeProvider _mudThemeProvider;
}