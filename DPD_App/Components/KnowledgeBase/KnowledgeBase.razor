@page "/KnowledgeBase"
@using Microsoft.AspNetCore.Components.Rendering

<MudText Typo="Typo.h3">My markdown</MudText>

<MudGrid>
    <MudItem xs="6">
        <MudTextField Immediate="true" T="string" Label="Request" Variant="Variant.Outlined" Value="Value" Lines="40" ValueChanged="Callback"/>
    </MudItem>
    <MudItem xs="6">
        <MudMarkdown Value="@Value" />
    </MudItem>
</MudGrid>

@code {
    private string Value { get; set; } = "text *italics* and **bold**";

    private void Callback(string obj)
    {
        Value = obj;
        StateHasChanged();
    }

}